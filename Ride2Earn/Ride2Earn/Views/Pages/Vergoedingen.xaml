<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride2Earn.Views.Pages.Vergoedingen">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10,0,10,15">
            <ListView x:Name="lstRitten">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding GeredenKM}" Detail="{Binding Datum}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>