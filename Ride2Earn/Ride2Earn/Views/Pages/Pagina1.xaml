<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ride2Earn.Views.Pages.Pagina1">
    <StackLayout Spacing="10"
                 Padding="20">
        <Entry Text ="{Binding GebruikerVoornaam}" />
        <Entry Text ="{Binding GebruikerAchternaam}" />
        <Button Text="Gebruiker Toevoegen"
                TextColor="White"
                BackgroundColor="DodgerBlue"
                FontSize="22"
                Command="{Binding AddCommand}"/>
        <Button Text="Refresh Gebruikers"
                TextColor="White"
                BackgroundColor="Fuchsia"
                FontSize="22"
                Command="{Binding RefreshCommand}" />
        <ListView ItemsSource="{Binding Gebruikers}" />

    </StackLayout>
</ContentPage>